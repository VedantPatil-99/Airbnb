<div
	class="col-xl-12 col-md-8 col-sm-8 offset-lg-0 offset-md-2 offset-sm-2 offset-0"
>
	<div
		class="row row-cols-xl-2 row-cols-lg-2 row-cols-md-2 row-cols-sm-1 row-cols-1"
	>
		<% for( review of listing.reviews) { %>

		<div class="card my-3 bg-light">
			<div class="card-body h-auto p-0">
				<div class="d-flex flex-row align-items-">
					<img
						src="../icons/filterIcons/Naruto.jpg"
						alt="host-dp"
						class="rounded-circle h-25 host-overview-dp"
					/>
					<div class="ms-3">
						<h6 class="card-title mb-1"><%= review.author.username %></h6>
						<p class="card-subtitle text-secondary mb-2 r-subtitle">
							6 years on Airbnb
						</p>
					</div>
				</div>

				<p
					class="fw-semibold s-ratings d-flex justify-content-start align-items-center"
				>
					<span class="s-rated d-flex w-auto"><%= review.rating %></span>
					<span class="dot px-1">Â· </span>
					<span><%= new Date(review.createdAt).toDateString() %></span>
				</p>
				<p class="card-text r-comment mb-2 mt-0"><%= review.comment %></p>

				<div class="row row-cols-lg-3">
					<a href="#" class="card-link">Show More</a>
					<% if (currUser) { %>
					<form
						action="/listings/<%= listing._id %>/reviews/<%= review._id %>/?_method=DELETE"
						method="post"
						class="m-0 p-0"
					>
						<button type="submit" class="btn btn-dark btn-sm">Delete</button>
					</form>
					<% } %>
				</div>
			</div>
		</div>
		<% } %>
	</div>
</div>
