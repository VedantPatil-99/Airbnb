<div
	class="col-xl-12 col-md-8 col-sm-8 offset-lg-0 offset-md-2 offset-sm-2 offset-0"
>
	<div
		class="row row-cols-xl-2 row-cols-lg-2 row-cols-md-2 row-cols-sm-1 row-cols-1"
	>
		<% for( review of listing.reviews) { %>

		<div class="card my-3 bg-light">
			<div class="card-body h-auto p-0">
				<h6 class="card-title m-0"><%= review.author.username %></h6>
				<p class="card-subtitle text-body-secondary fs-6 mb-2">
					6 years on Airbnb
				</p>
				<p class="card-text fw-semibold s-ratings">
					<span class="s-rated"><%= review.rating %></span>
					<span> Â· <%= new Date(review.createdAt).toDateString() %></span>
				</p>
				<p class="card-text mb-2 mt-0"><%= review.comment %></p>

				<div class="row row-cols-lg-3">
					<a href="#" class="card-link">Show More</a>
					<% if (currUser) { %>
					<form
						action="/listings/<%= listing._id %>/reviews/<%= review._id %>/?_method=DELETE"
						method="post"
						class="m-0 p-0"
					>
						<button type="submit" class="btn btn-dark btn-sm">Delete</button>
					</form>
					<% } %>
				</div>
			</div>
		</div>
		<% } %>
	</div>
</div>
<script src="../js/showRatings.js"></script>
